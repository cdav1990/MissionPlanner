// Camera controls for different views
function CameraControls({ viewMode }) {
  const { camera } = useThree();
  
  useEffect(() => {
    switch(viewMode) {
      case 'top':
        camera.position.set(0, 15, 0);
        camera.lookAt(0, 0, 0);
        break;
      case 'side':
        camera.position.set(15, 2, 0);
        camera.lookAt(0, 0, 0);
        break;
      case 'front':
        camera.position.set(0, 2, 15);
        camera.lookAt(0, 0, 0);
        break;
      case 'perspective':
      default:
        camera.position.set(8, 8, 8);
        camera.lookAt(0, 0, 0);
        break;
    }
  }, [viewMode, camera]);
  
  return null;
}

